<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    tools:context="com.example.cesar.jogodobicho.activities.MainActivity">

    <Button
        android:text="Gerar números"
        android:textColor="@color/colorPrimaryText"
        android:elevation="10dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:onClick="gerarNumeros"
        android:background="@drawable/selector"
        android:id="@+id/btnGerar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtQtdeJogos"
        android:layout_below="@+id/btnGerar"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:textColor="#fff"
        android:onClick="definirQtdeJogos"
        android:text="10 JOGOS"/>



    <TextView
        android:text="DEFINIR NÚMEROS"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtDefinirTitulares"
        android:textAlignment="center"
        android:padding="16dp"
        android:onClick="mostraModal"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
